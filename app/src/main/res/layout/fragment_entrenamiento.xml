<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.pc.mhealth.fragments.EntrenamientoFragment">

    <ImageView
        android:padding="10dp"
        android:id="@+id/imagenEntrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/entrenamiento"/>

    <TextView
        android:gravity="center"
        android:id="@+id/fecha"
        android:layout_below="@+id/imagenEntrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Junio 8,9 y 10"
        android:textSize="30dp"
        android:padding="10dp"
        android:textColor="#ffff6129"/>

   <TextView
       android:id="@+id/informacionEntrenamiento"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/InformacionEntrenamiento"
       android:layout_below="@id/fecha"
       android:textSize="@dimen/tamañoInformacion"
       android:gravity="center"/>

    <TextView
        android:gravity="center"
        android:textColor="#ffff6534"
        android:textSize="@dimen/tamañoInformacion"
        android:id="@+id/link_entrenamiento"
        android:layout_below="@+id/informacionEntrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        />




</RelativeLayout>
